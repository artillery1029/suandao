<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/wishingtree_tree_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/btn_winshingtree_back_bg"
                android:text="返回"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/text_size_14"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/wishingtree_tree_title" />

            <Button
                android:id="@+id/introduct"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/btn_winshingtree_back_bg"
                android:text="介绍"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/text_size_14"

                />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">

            <Button
                android:id="@+id/btn_mywish"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_weight="1"
                android:background="@mipmap/wishingtree_yellow_tree_btn"
                android:text="我的愿望"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/text_size_14" />


            <Button
                android:id="@+id/btn_wishCard"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_weight="1"
                android:background="@mipmap/wishingtree_red_tree_btn"
                android:text="许愿"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/wishtree_main_bang"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_75"
        android:layout_marginRight="@dimen/dp_20">

    </View>

</RelativeLayout>
