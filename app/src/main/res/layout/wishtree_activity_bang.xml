<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/wishtree_bang_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62.0dip"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@drawable/btn_winshingtree_back_bg"
                android:text="返回"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/text_size_14"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/wishtree_bang_title" />

            <Button
                android:id="@+id/introduct"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@drawable/btn_winshingtree_back_bg"
                android:text="说明"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/text_size_14"

                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">

            <include layout="@layout/wishtree_item_top_praybang" />

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13.0dip"
            android:layout_marginRight="13.0dip"
            app:cardBackgroundColor="@color/color_fff"
            app:cardCornerRadius="5.0dip">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/wishtree_bang_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>